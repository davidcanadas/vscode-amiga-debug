{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "${command:amiga.bin-path}\\gnumake.exe",
            "args": [
                "-j4",
                "extensionPath=${command:amiga.bin-path}",
                "program=${workspaceFolder}\\${config:amiga.program}-rel",
                "targetName=Release",
                "ccExtraOptions=-gdwarf-3 -Ofast -DDEBUG",
                "vasmExtraOptions=-dwarf=3"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${env:PATH};${command:amiga.bin-path}\\opt\\bin;${command:amiga.bin-path}"
                }
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile-debug",
            "type": "shell",
            "command": "${command:amiga.bin-path}\\gnumake.exe",
            "args": [
                "-j4",
                "extensionPath=${command:amiga.bin-path}",
                "program=${workspaceFolder}\\${config:amiga.program}-dbg",
                "targetName=Debug",
                "ccExtraOptions=-gdwarf-3 -DDEBUG",
                "vasmExtraOptions=-dwarf=3"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${env:PATH};${command:amiga.bin-path}\\opt\\bin;${command:amiga.bin-path}"
                }
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "compile-final",
            "type": "shell",
            "command": "${command:amiga.bin-path}\\gnumake.exe",
            "args": [
                "-j4",
                "extensionPath=${command:amiga.bin-path}",
                "program=${workspaceFolder}\\${config:amiga.program}",
                "targetName=Final",
                "ccExtraOptions=-Ofast -DNEBUG",
                "vasmExtraOptions="
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${env:PATH};${command:amiga.bin-path}\\opt\\bin;${command:amiga.bin-path}"
                }
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}